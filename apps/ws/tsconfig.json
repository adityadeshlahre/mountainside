{
  "extends": "@repo/typescript-config/base.json",
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "@repo/types/*": ["./../../packages/types/*"],
      "@repo/db/*": ["./../../packages/db/src/*"],
      "src/*": ["*"]
    }
  }
}